//- module
doctype html
include /../../static/assets/ldui/pug/ldui.pug
- var ctrl = {cover: {authpanel: true}, navtop: {placeholder: true, shown: true}, foot: {}, carbon: {}}
- var vars = {root: ""}
block vars
html
  include /modules/mixin.pug
  include /user/mixin.pug
  include /project/mixin.pug
  include /activity/mixin.pug
  include /edit/index.pug
  head
    meta(charset="utf-8")
    +css("/assets/lib/flatpickr/flatpickr.min.css")
    +css("/assets/bootstrap/4.3.1/css/bootstrap.min.css")
    +css("/assets/ldui/ldui.min.css")
    +css("/css/index.css")
    block head
  body
    +script("/js/pack/base.min.js")
    include modules/navtop.pug
    .ldNotify
    block body
    .px-2.py-0.bg-dark.shadow-sm.border(onclick="lda.ldcvmgr.toggle('dev-note')",
    style="position:fixed;bottom:0;right:10px;border-radius:5px 5px 0 0"): a.text-light(href="#") Dev Note
    if ctrl.cover.authpanel
      include /modules/cover/authpanel.pug
    include /modules/foot.pug
    +script("/js/pack/vendor.min.js")
    +script("/assets/lib/flatpickr/flatpickr.min.js")
    +script("/assets/xfl/xfl.js")
    +script("/js/pack/core.min.js")

    block script
