//- module
doctype html
include /../../static/assets/ldui/pug/ldui.pug
-
  var ctrl = {
    cover: {authpanel: true},
    navtop: {placeholder: true, shown: true},
    foot: {shown: true},
    carbon: {}
  }
- var vars = {root: ""}
block vars
html
  include /modules/mixin.pug
  include /user/mixin.pug
  include /project/mixin.pug
  include /activity/mixin.pug
  include /edit/index.pug
  head
    meta(charset="utf-8")
    link(href="https://fonts.googleapis.com/css?family=Noto+Sans+TC:300,400,500,700|Roboto:300,500&display=swap",rel="stylesheet")
    +css("/assets/lib/flatpickr/flatpickr.min.css")
    +css("/assets/bootstrap/4.3.1/css/bootstrap.min.css")
    +css("/assets/ldui/ldui.min.css")
    +css("/css/index.css")
    style(type="text/css"): :stylus
      h1,h2,h3 { font-family: 'Noto Sans TC', serif!important }
      h4,h5,h6 { font-family: Roboto, 'Noto Sans TC', sans-serif!important;font-weight:500 }
      .typeset
        h4,h5,h6 { font-family: Roboto, 'Noto Sans TC', sans-serif!important;font-weight:500 }
      body .typeset, body, p { font-family: Roboto, 'Noto Sans TC', sans-serif!important } 
    block head
  body.ld-over-full-inverse(data-spy=(ctrl.scrollspy ? "scroll" : false),
  data-target=(ctrl.scrollspy ? ctrl.scrollspy : false))
    .ld.ld-spin.ld-spinner

    +script("/js/pack/base.min.js")
    //-include /modules/navtop.pug
    .ldNotify
    block body
    .px-2.py-0.bg-dark.shadow-sm.border(onclick="lda.ldcvmgr.toggle('dev-note')",
    style="position:fixed;bottom:0;right:10px;border-radius:5px 5px 0 0"): a.text-light(href="#") Dev Note
    +script("/js/pack/vendor.min.js")

    block script
