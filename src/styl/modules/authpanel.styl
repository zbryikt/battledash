//- module
.authpanel, .ldcv > .base > .inner.authpanel
  background: none
  width: 700px
  height: 510px
  max-width: 100%
  border-radius: 10px
  overflow: hidden
  background-color: #234
  background-image: unquote('url(data:image/svg+xml;base64,)')
  background-size: 50%
  background-position: left center
  background-repeat: no-repeat
.authpanel .card-body
  background: url(/assets/img/c/bg/ball-wed.svg) center center no-repeat
  background-size: cover

.authpanel .info
  width: 381px
  display: inline-block
  background-image: url(/assets/img/c/bg/foam-cyan.svg)
  background-position: center center
  background-size: cover
  float: left
  height: 513px
  position: relative
  color: #fff
.authpanel .form
  width: 381px
  display: inline-block
  float: right
  font-size: 16px
.authpanel .nav-tabs
  box-shadow: inset 0 -2px 6px rgba(0,0,0,.05)

.authpanel.signup
  .nav-link[data-action="signup"]
    background-color: #fff
    border-color: #dee2e6 #dee2e6 #fff
  *[data-show="signup"]
    display: auto
  *[data-show="login"]
    display: none
.authpanel.signup, .authpanel.login
  *[data-info]
    animation: ld-float-ttb-in 1s

.authpanel.signup, .authpanel.login
  &.failed
    *[data-info="failed"]
      display: block
    *[data-info="default"]
      display: none

.authpanel.login
  .nav-link[data-action="login"]
    background-color: #fff
    border-color: #dee2e6 #dee2e6 #fff
  *[data-show="login"]
    display: auto
  *[data-show="signup"]
    display: none
